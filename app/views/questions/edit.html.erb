<h1>Edit Question</h1>

<div class='row'>
  <div class='col-md-4'>
    <p>Guidelines for Questions</p>
    <ul>
      <li>Make sure it isn't stupid!</li>
    </ul>
  </div>
  <div class='col-md-8'>
    <%= form_for @question do |f| %>
      <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter new title here" %>
      </div>
      <div class='form-group'>
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter updated question" %>
      </div>
      <div class="form-group">
        <%= f.label :resolved %>
        <%= f.check_box :resolved %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
